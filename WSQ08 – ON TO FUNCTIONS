#include <iostream>
using namespace std;

int sum (int x,int y) {
  int suma= x+y;
  return suma;
}
int subs (int q,int w) {
  int resta= q-w;
  return resta;
}
int prod (int e,int r) {
  int por= e*r;
  return por;
}

int div (int t,int u) {
  int entre= t/u;
  return entre;
}

int rem (int i,int o) {
  int remainder= i%o ;
  return remainder;
}

int main () {
  int a,b,s,r,p,d,c;

cout << "Enter two numbers: " ;
cin >> a >> b;

  s= sum(a,b);
  cout << "The sum is: " << s << endl;
r= subs (a,b);
cout << "The difference is: " << r << endl;

p= prod (a,b);
cout << "The product is: " << p << endl;

d= div (a,b);
cout << "The result of the division is: " << d << endl;

c=rem (a,b);
cout << "The remainder is: " << c << endl;


  return 0;
}
