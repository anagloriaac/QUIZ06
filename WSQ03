#include <iostream>
using namespace std;
int o;
int t;
int main ()
{ o = 21;
  t = 7;
  cout << "First number: ";
  cout << o;
  cout << endl;
  cout << "Second number: ";
  cout << t;
  cout << endl;
  cout << "Sum: ";
  cout << o+t;
  cout << endl;
  cout << "Difference: ";
  cout << o-t;
  cout << endl;
  cout << "Product: ";
  cout << o*t;
  cout << endl;
  cout << "Integer based division: ";
  cout << o/t;
  cout << endl;
  cout << "Remainder: ";
  cout <<  o- (t*(o/t));
  cout << endl;
return   0;}
